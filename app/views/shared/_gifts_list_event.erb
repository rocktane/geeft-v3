<% if @gifts_to_display %>
  <div class="gifts-event">
    <h3>Les id√©es cadeaux</h3>
    <ul data-controller="delete-gift" data-delete-gift-id-value="<%= @event.gift.id %>">
      <% index = 0 %>
      <% @gifts_to_display.each do |gift| %>
        <li data-update-event-target="gift">
          <div class="secondary-container">
            <div class="gift-container">
              <div class="gift-left">
                  <%= image_tag('open-gift.png', alt: 'Cadeau', class:"icon-gift") %>
                <div class="gift">
                  <%= gift %>
                </div>
              </div>
            <% if current_user.id == @event.user_id %>
              <span class="delete-container" class ="gift-delete">
                <div class="trash-bin" data-action="click->delete-gift#delete">
                  <%= image_tag'bin2.svg' %>
                </div>
                <div class="delete-text" data-action="click->delete-gift#delete" data-refresh-gift-target="button" data-giftindex="<%= index %>">
                  Supprimer
                </div>
              </span>
            <% end %>
            </div>
          </div>
        </li>
      <% index += 1 %>
      <% end %>
    </ul>
  </div>
<% end %>
