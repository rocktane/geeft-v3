<% if !@event.gift.nil? %>
  <div class="gifts-event">
    <h3>Les id√©es cadeaux</h3>
    <ul data-controller="delete-gift">
      <% index = 0 %>
      <% @event.gift.generated_list.each do |gift| %>
        <li data-update-event-target="gift">
          <div class="secondary-container">
          <div class="gift-container">
            <div class="gift-left">
                <%= image_tag('open-gift.png', alt: 'Cadeau', class:"icon-gift") %>
              <div class="gift">
                <%= gift %>
              </div>
            </div>
            <div class="delete-container" data-action="click->delete-gift#delete">
              <%= image_tag'bin2.svg', data: { env: Rails.env, giftId: @event.gift.id, giftIndex: index } %>
          </div>
          </div>
          </div>
        </li>
      <% end %>
      <% index += 1 %>
    </ul>
  </div>
<% end %>
