<div class="home-navbar">
    <%= link_to dashboard_path do %>
      <%= image_tag('calendar.svg', alt: 'Calendar') %>
    <% end %>

    <div class="logo-mobile">
      <%= link_to root_path do %>
        <%= image_tag('geeft-logo.svg', alt: 'Home', class: 'logo-geeft') %>
        <div class="text-logo">Touve le cadeau parfait</div>
      <% end %>
    </div>

    <% if @user == "guest" %>
      <%= link_to new_user_session_path do %>
        <%= image_tag('signin2.svg', alt: 'Login') %>
      <% end %>
      <% else %>
    <div class="dropdown-menu">
      <details id="menu-details">
        <summary>
          <%= image_tag('menu.svg', alt: 'Menu', class:'menu') %>
        </summary>
        <ul>
          <li>
            <%= link_to dashboard_path do %>
              <%= image_tag('calendar.svg', alt: 'Calendar', class:'menu-items') %>
              Calendrier
            <% end %>
          </li>
          <li>
            <% if current_user.nil? %>
              <%= link_to new_user_session_path do %>
                <%= image_tag('signin2.svg', alt: 'User', class:'menu-items') %>
                Connexion
              <% end %>
            <% else %>
              <%= link_to user_path(current_user) do %>
                <%= image_tag('user.svg', alt: 'User', class:'menu-items') %>
                Profil
              <% end %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, data: { turbo_method: :delete } do %>
              <%= image_tag('logout.svg', alt: 'Log-Out', class:'menu-items') %>
              DÃ©connexion
            <% end %>
          </li>
        </ul>
      </details>
    </div>
  <% end %>
</div>
