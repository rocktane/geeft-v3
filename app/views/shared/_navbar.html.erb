
<div class="navbar">

  <!-- Bouton Back Mobile -->
  <div class="btn-back-mobile">
    <%= link_to :back do %>
      <%= image_tag('back.svg', alt: 'Retour', class:'icon-navbar') %>
    <% end %>
  </div>

  <div class="navbar-left">
    <%= link_to image_tag('geeft-logo.svg', alt: 'Geeft logo'), root_path %>
    <!-- Voir Helper Navbar Titles -->
    <div class="title"><%= navbar_title %></div>
  </div>

  <% if @user == "guest" %>
    <%= link_to new_user_session_path do %>
      <div class="btn__theme btn-login">
        <div class="btn-green btn btn__content">
          <%= image_tag('signin.svg', alt: 'User') %>
          Connexion
        </div>
      </div>
    <% end %>

  <% else %>
    <div class="dropdown-menu">
      <details id="menu-details">
        <summary>
          <%= image_tag('menu.svg', alt: 'Menu', class:'icon-navbar') %>
        </summary>
        <ul>
          <li>
            <%= link_to dashboard_path do %>
              <%= image_tag('calendar.svg', alt: 'Calendar', class:'menu-items') %>
              Calendrier
            <% end %>
          </li>
          <li>
            <% if current_user.nil? %>
              <%= link_to new_user_session_path do %>
                <%= image_tag('signin2.svg', alt: 'User', class:'menu-items') %>
                Connexion
              <% end %>
            <% else %>
              <%= link_to user_path(current_user) do %>
                <%= image_tag('user.svg', alt: 'User', class:'menu-items') %>
                Profil
              <% end %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, data: { turbo_method: :delete } do %>
              <%= image_tag('logout.svg', alt: 'Log-Out', class:'menu-items') %>
              DÃ©connexion
            <% end %>
          </li>
        </ul>
      </details>
    </div>
  <% end %>
</div>
