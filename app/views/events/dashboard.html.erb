<div class="body-container">
  <div class="dashboard">
    <div class="annual-calendar left-pane">
      <%= render 'shared/calendar' %>

      <% if !@events.empty? %>
        <%= render 'shared/event_calendar' %>
      <% end %>
    </div>
    <div class="dashboard-right right-pane">
      <%= link_to :back, class: "btn-back" do %>
        <i class="fa-solid fa-chevron-left"></i> Retour
      <% end %>
    <%= render 'shared/event_dashboard' %>
    </div>
  </div>

  <%= link_to new_event_path, :class=> "btn-mobile" do %>
    <i class='fa-solid fa-square-plus'></i>
  <% end %>
</div>
