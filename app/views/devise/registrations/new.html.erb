<div class="body-container">
  <div class="btn-back">
    <%= link_to '< Retour', :back %>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-inputs">
        <div class="info-user">
          <h2> Email </h2>
          <%= f.email_field :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" }%>
        </div>

        <div class="info-user">
          <h2> Nom d'utilisateur </h2>
          <%= f.text_field :username,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "username" }%>
        </div>

        <div class="info-user">
          <h2> Date d'anniversaire </h2>
          <%= f.date_field :birthday,
              required: true,
              autofocus: true,
              placeholder: "dd/mm/aaaa",
              value: @user.birthday&.strftime("%d/%m/%Y"),
              autocomplete: "birthday" %>
        </div>

        <div class="info-user">
          <h2>Mot de passe</h2>
          <%= f.password_field :password,
                              required: true,
                              autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <div class="hint"><%= @minimum_password_length %> caract√®res minimum</div>
          <% end %>
        </div>

        <div class="info-user">
          <h2> Confirmation du mot de passe </h2>
          <%= f.password_field :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>

        <div class="btn__theme btn btn-green">
          <%= button_tag(type: 'submit') do %>
            <div class="btn__content">
              <%= image_tag('signup.svg', alt: 'Inscription') %>
              Inscription
            </div>
        <% end %>
        </div>
      </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
